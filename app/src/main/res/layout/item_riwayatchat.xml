<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/bg_itemchat_7"
    android:elevation="4dp"
    android:layout_marginStart="25dp"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="25dp"
    android:layout_marginBottom="10dp"
    android:padding="20dp">

    <ImageView
        android:id="@+id/emotion_icon"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/happy"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvname_bot"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tvname_bot"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/font3_poppins_semibold"
        android:text="Moodie"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="19.00"
        android:layout_marginStart="160dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvname_bot"
        />


    <TextView
        android:id="@+id/tvdeskripsi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginStart="60dp"
        android:fontFamily="@font/font2_poppins_regular"
        android:text="Ada cerita apa hari ini?"
        android:textColor="@color/black"
        android:alpha="0.5"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvname_bot" />

</androidx.constraintlayout.widget.ConstraintLayout>
