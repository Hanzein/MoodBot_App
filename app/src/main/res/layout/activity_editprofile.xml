<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.profile.EditProfileActivity">

    <ImageView
        android:id="@+id/btn_backedtprofile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:contentDescription=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/eva_arrow" />

    <Button
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:text="Simpan"
        android:textSize="13dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:background="@drawable/btn_save_editprofile"
        app:layout_constraintStart_toEndOf="@id/txt_edit_profile_appbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/txt_edit_profile_appbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font3_poppins_semibold"
        android:text="@string/edit_profile_appbar"
        android:layout_marginTop="28sp"
        android:layout_marginStart="68dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textAlignment="center"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/btn_backedtprofile"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:padding="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_edit_profile_appbar">

    <View
        android:layout_width="wrap_content"
        android:layout_height="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.7"
        android:text="Username"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/lucide_user"
        android:hint="Username"
        android:textColorHint="@color/grey"
        android:drawablePadding="15dp"
        android:inputType="textEmailAddress" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.7"
        android:text="Email Address"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/email_icon"
        android:hint="Email"
        android:textColorHint="@color/grey"
        android:drawablePadding="15dp"
        android:inputType="textEmailAddress" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.7"
            android:text="Gender"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_address"
            android:drawablePadding="15dp"
            android:textColorHint="@color/grey"
            android:hint="Masukkan alamat kamu"
            android:inputType="textPassword" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.7"
        android:text="Country"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_country"
        android:drawablePadding="15dp"
        android:textColorHint="@color/grey"
        android:hint="Kamu dari negara mana"
        android:inputType="textPassword" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.7"
        android:text="Address"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_address"
        android:drawablePadding="15dp"
        android:textColorHint="@color/grey"
        android:hint="Masukkan alamat kamu"
        android:inputType="textPassword" />


    </LinearLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>